{
  "version": 2,
  "builds": [
    {
      "src": "activity/server/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "activity/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/activity/server/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/activity/client/index.html"
    }
  ]
}
